{
    "version": "0.2.0",
    "configurations": [
        
      {
        "name": "Debug no WSL",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/labirinto.exe", // Caminho do executável
        "args": [], // Argumentos para passar ao programa, se necessário
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Habilitar formatação para gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Compilar", // Nome da task de compilação, explicada abaixo
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }
  